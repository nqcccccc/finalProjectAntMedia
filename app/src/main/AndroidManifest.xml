<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.antmedia.android.broadcaster">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.antmedia.android.SignUp.SignUpActivity"></activity>
        <activity android:name="io.antmedia.android.SignIn.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.antmedia.android.Play.PlayActivity"
            android:theme="@style/AppThemeDark" />
        <activity android:name="io.antmedia.android.Dashboard.DashboardAcitivity"></activity>
        <activity
            android:name="io.antmedia.android.Broadcast.BroadcastActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppThemeDark" />

        <service android:name=".LiveVideoBroadcaster" />
    </application>

</manifest>